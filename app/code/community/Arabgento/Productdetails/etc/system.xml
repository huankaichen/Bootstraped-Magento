<?xml version="1.0"?>
<config>
    <tabs>
        <arabgento translate="label" module="productdetails">
            <label>Arbgento</label>
            <sort_order>200</sort_order>
        </arabgento>
    </tabs>
    <sections>
        <product_details translate="label" module="productdetails">
            <label>Rollover to zoom</label>
            <tab>arabgento</tab>
            <frontend_type>text</frontend_type>
            <sort_order>54</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general translate="label">
                    <label>General</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled translate="label">
                            <label>Enable Rollover to zoom</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>
                        <mainImageSize translate="label comment">
                            <label>Size of main image</label>
                            <comment>Size in pixels width_height. (Default 265_265). </comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </mainImageSize>
                        <popupImageSize translate="label comment">
                            <label>Size of popup image</label>
                            <comment>Size in pixels width_height. (Default 500_500). </comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>6</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </popupImageSize>
                        <additionalImageSize translate="label comment">
                            <label>Size of additional images</label>
                            <comment>Size in pixels width_height. (Default 60_60)</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </additionalImageSize>
                       
                    </fields>
                </general>
            </groups>
        </product_details>
    </sections>
</config>