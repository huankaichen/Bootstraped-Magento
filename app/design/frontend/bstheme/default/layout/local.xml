<layout version="0.1.0">

    <!-- Default handle, loaded on most pages -->
    <default>

        <reference name="head">

            <!-- Add Bootstraped & Bstheme assets -->
            <action method="addCss">
                <stylesheet>css/bootstrap.min.css</stylesheet>
            </action>
            <action method="addCss">
                <stylesheet>css/bstheme.css</stylesheet>
            </action>
            <action method="addItem">
                <type>skin_js</type>
                <name>js/bootstrap.min.js</name>
            </action>
            <action method="addItem">
                <type>skin_js</type>
                <name>js/bstheme.js</name>
            </action>
        </reference>

    </default>

</layout>